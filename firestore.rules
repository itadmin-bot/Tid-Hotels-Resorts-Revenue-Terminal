rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if the authenticated user is an ADMIN
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // User profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Centralized Transactions Collection
    match /transactions/{transactionId} {
      // Users can only read transactions they created (synced via where clause)
      // Admins can read all transactions
      allow read: if request.auth != null && (resource.data.createdBy == request.auth.uid || isAdmin());
      
      // Any authenticated user can create a record
      allow create: if request.auth != null;
      
      // Users can update their own transactions for settlement (status/paidAmount/balance)
      // Admins have full update rights
      allow update: if request.auth != null && (
        isAdmin() || 
        (resource.data.createdBy == request.auth.uid && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'paidAmount', 'balance', 'updatedAt', 'settlementMethod']))
      );
      
      // Strictly Admin-only deletion
      allow delete: if isAdmin();
    }

    // Menu and Rooms (Snapshots for all logged-in users, edits for Admin only)
    match /menu/{itemId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /rooms/{roomId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Settings (Read for all logged-in for calculation/receipts, Write for Admin)
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Security Access Codes (Admin only)
    match /accessCodes/{codeId} {
      allow read, write: if isAdmin();
      allow get: if request.auth != null;
    }
  }
}